<html>
    <head>
        <title><%= title %></title>
        <style>
            body{
                background-color: aquamarine;
            }
        </style>
    </head>
    <body>
        <h1>This is the contact List</h1>
        <ul>
            <table border="1">  
                    <tr>
                        <th>Name</th>
                        <th>City</th>
                    </tr>
               
                <% for(i of contact_list){%>
                    <tr>
                        <td> <h4><%= i.name %></h4></td>
                        <td><p><%= i.city %></p></td>
                    </tr>
               
                <%}%>
            </table>
          
        </ul>
        
        <form action="/contact-list" method="POST">
           
            <input type="text" name="my_name" placeholder="Enter Name" required>
            <input type="text" name="my_city" placeholder="Enter City" required>
            
            <button type="submit">Submit</button>
        </form>

    </body>
</html>